
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--breadcrumbs area start-->
<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                        <li>Đăng nhập</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--breadcrumbs area end-->

<section class="account">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="account-contents" style="background: url('assets/img/about/about1.jpg'); background-size: cover;">
                    <div class="row">
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                            <div class="account-thumb">
                                <h2>Đăng nhập</h2>
                                <p>Đăng nhập ngay ! để nhận được nhiều phần quà ưu đãi khi mua hàng tại cửa hàng</p>
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                            <div class="account-content">
                                @using (Html.BeginForm("Login","Account",FormMethod.Post)){
                                    <div class="single-acc-field">
                                        <label for="email">Tên đăng nhập</label>
                                        <input type="text" name="username" id="email" placeholder="Nhập tên người dùng" required>
                                    </div>
                                    <div class="single-acc-field">
                                        <label for="password">Mật khẩu</label>
                                        <input type="password" name="password" placeholder="Nhập mật khẩu của bạn" required>
                                    </div>
                                    <div class="single-acc-field">
                                        <button type="submit">Đăng nhập</button>
                                    </div>
                                    <a href="@Url.Action("ForgotPassword","Account")">Quên mật khẩu</a>
                                    <a href="@Url.Action("Register","Account")">Chưa có tài khoản ?</a>
                            }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

