
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                        <li>Quên mật khẩu</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--breadcrumbs area end-->
<section class="account">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="account-contents" style="background: url('assets/img/about/about1.jpg'); background-size: cover;">
                    <div class="row">
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                            <div class="account-thumb">
                                <h2>Bạn quên mật khẩu ?</h2>
                                <p>Để lấy lại mật khẩu bạn hãy nhập Email đã đăng ký tài khoản. Sau khi nhập thì mật khẩu mới sẽ được gửi về Email</p>
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                            <div class="account-content">
                                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="single-acc-field">
                                        <label for="email">Email</label>
                                        <div style="display:flex;">
                                            <input type="email" id="email" name="email" placeholder="Nhập email của bạn" required>
                                            <button type="button" onclick="GetCode()">nhận</button>
                                        </div>
                                    </div>
                                    <div class="single-acc-field">
                                        <label for="code">Mã xác nhận</label>
                                        <input type="text" id="confirmCode", name="code" placeholder="Nhập mã xác nhận đã nhận được trong email" required/>
                                    </div>
                                    <div class="single-acc-field">
                                        <button type="submit">Lấy lại mật khẩu</button>
                                    </div>
                                    <a href="@Url.Action("Login","Account")">Đăng nhập ngay</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    function GetCode(){
        var getMail = document.getElementById('email').value;
        console.log(getMail);
        fetch(`/api/account/forgotpass/sendcodeconfirm/${getMail}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        })
            .then(response => response.json())
            .then(data => {
                Swal.fire({
                    position: "center-center",
                    icon: "success",
                    title: data.message,
                    showConfirmButton: true,
                    timer: 2500
                })
            })
            .catch(error => {
                alert("Error")
            });
    }
</script>

