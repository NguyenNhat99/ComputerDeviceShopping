@using ComputerDeviceShopping.Models;
@model ComputerDeviceShopping.Models.Account

<div class="header_top">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6">
                <div class="support_info">
                    <p>Email: <a href='/'>@ViewBag.EmailInformation</a></p>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="top_right text-right">
                    <ul>
                        <li><a href="@(Model!=null ? Url.Action("Index","UserProfile") : Url.Action("Login","Account"))">@(Model != null ? (Model.LastName + Model.FirstName ) : "Đăng nhập")</a></li>
                        <li><a href="@(Model!=null ? Url.Action("Logout","Account") : Url.Action("Register","Account"))">@(Model!=null ? "Đăng xuất" : "Đăng ký")</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>