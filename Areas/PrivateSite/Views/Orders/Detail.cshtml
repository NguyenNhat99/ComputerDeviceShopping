@using ComputerDeviceShopping.Models;
@using ComputerDeviceShopping.Common;
@model ComputerDeviceShopping.Models.Order
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/PrivateSite/Views/Shared/_Layout.cshtml";
    var detailList = ViewData["ProductOrdered"] as List<OrdersDetail>;
    var productList = ViewData["ProductList"] as List<Product>;
    var customerOrder = ViewData["CustomerOrder"] as Customer;
    float subTotal = 0;
}
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6" style="margin-top:90px;">
                    <h1>Chi tiết đơn hàng</h1>
                    <h5>Đơn hàng #@Model.OrderId <span class="badge @OrderStatusHelper.GetBadgeClassById(Model.StatusId??0) rounded-3 fw-600">@OrderStatusHelper.getNameStatusById(Model.StatusId??0)</span></h5>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-post text-nowrap mb-0 align-middle">
                                    <thead class="text-dark fs-4">
                                        <tr>
                                            <th class="">
                                                <h6 class="fw-600 mb-0">Sản phẩm</h6>
                                            </th>
                                            <th class="">
                                                <h6 class="fw-600 mb-0">Giá tiền</h6>
                                            </th>
                                            <th class="">
                                                <h6 class="fw-600 mb-0">Số lượng</h6>
                                            </th>
                                            <th class="">
                                                <h6 class="fw-600 mb-0">Tổng giá</h6>
                                            </th>
                                          
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var detail in detailList)
                                        {
                                            foreach (var pro in productList)
                                            {
                                                if (detail.ProductId.Equals(pro.ProductId))
                                                {
                                                    <tr>
                                                        <td>
                                                            <img src="@pro.Avatar" style="height:60px;" />
                                                            <h6 class="fw-600 mb-0">@pro.ProductName</h6>
                                                        </td>
                                                        <td><h6 class="fw-600 mb-1">@pro.Price đ</h6></td>
                                                        <td><h6 class="fw-600 mb-1">@detail.Quantity</h6></td>
                                                        <td><h6 class="fw-600 mb-1">@(pro.Price*detail.Quantity)</h6></td>
                                                    </tr>
                                                    subTotal += (float)(pro.Price*detail.Quantity);
                                                }
                                            }
                                        }
                                    </tbody>
                                </table>
                                <div class="mt-3">
                                    <p>Số tiền: <b>@subTotal</b></p>
                                </div>
                                  <div class="mt-3">
                                    <p>Phí giao hàng: <b>Free</b></p>
                                </div>
                                <div class="mt-3">
                                    <p>Áp dụng giảm giá: <b>@ViewBag.DiscountVoucherOrder % - Mã: @ViewBag.CodeVoucherOrder </b></p>
                                </div>
                                <div class="mt-3">
                                    <p>Thành tiền: <b>@Model.TotalPrice</b></p>
                                </div>
                            </div>
                        </div>
                        <div class="">
                            <h5>Lệnh:</h5>
                            <div class="form-group">
                                <a href="@Url.Action("Index","Orders")" class="btn btn-secondary">Quay về</a>
                                @if(Model.StatusId == 3)
                                {
                                    <button class="btn btn-danger" onclick='changeStatusOrder(@Model.OrderId,6)'>Hủy đơn</button>
                                    <button class="btn btn-primary" onclick="changeStatusOrder(@Model.OrderId,2)">Xác nhận đơn hàng</button>
                                }
                                else if(Model.StatusId == 2)
                                {
                                    <button class="btn btn-danger" onclick="changeStatusOrder(@Model.OrderId,6)">Hủy đơn</button>
                                <button class="btn btn-success" onclick="changeStatusOrder(@Model.OrderId,5)">Thành công</button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label "><b>Khách hàng</b></label>
                        <input type="text" class="form-control" style="border:none;" value="Mã: @Model.CustomerId" disabled>
                    </div>
                    <div class="mb-3">
                        <label class="form-label "><b>Thông tin nhận hàng</b></label>
                        <input type="text" class="form-control" style="border:none;" value="Họ tên: @customerOrder.LastName @customerOrder.FirstName" disabled>
                        <input type="text" class="form-control" style="border:none;" value="Email: @customerOrder.Email" disabled>
                        <input type="text" class="form-control" style="border:none;" value="Số điện thoại: @customerOrder.Phone" disabled>
                        <input type="text" class="form-control" style="border:none;" value="Địa chỉ: @customerOrder.DeliverAddress" disabled>
                    </div>
                    @if(Model.StatusId == 4 || Model.StatusId == 6)
                    {
                        <div class="mb-3">
                            <label class="form-label "><b>Đơn hàng</b></label>
                            <input type="text" class="form-control" style="border:none;" value="Ngày tạo: @Model.CreateAt" disabled>
                        </div>
                    }
                    else
                    {
                        <div class="mb-3">
                            <label class="form-label "><b>Đơn hàng</b></label>
                            <input type="text" class="form-control" style="border:none;" value="Ghi chú: @Model.Note" disabled>
                            <input type="text" class="form-control" style="border:none;" value="Ngày tạo: @Model.CreateAt" disabled>
                            <input type="text" class="form-control" style="border:none;" value="Thanh toán: @(Model.PaymentId==1 ? "Thanh toán online" : "Thanh toán khi nhận hàng")" disabled>
                            <input type="text" class="form-control" style="border:none;" value="Trạng thái thanh toán: @(Model.PaymentId == 1 ? "Đã thanh toán" : "Chưa thanh toán")" disabled>
                        </div>
                    }
                  
                </div>
            </div>
        </div>
    </section>
</div>
<script>

    function changeStatusOrder(id, status) {
        Swal.fire({
            title: `${status == 2 ? "Xác nhận đơn hàng" :  status == 5 ? "Đơn hàng đã hoàn thành" : "Hủy đơn hàng"}`,
            text: "Bạn sẽ không thể khôi phục khi đã thực hiện",
            icon: "warning",
            showCancelButton: true,
            cancelButtonColor: "#d33",
            cancelButtonText: "Đóng",
            confirmButtonColor: "#3085d6",
            confirmButtonText: "Đồng ý"
        }).then((result) => {
            if (result.isConfirmed) {
                fetch(`/api/privatesite/order/changestatus/${id}&${status}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire({
                                position: "center-center",
                                icon: "success",
                                title: data.message,
                                showConfirmButton: true,
                                timer: 1500
                            }).then((result) => {
                                if (result.dismiss === Swal.DismissReason.timer || result.isConfirmed) {
                                    location.reload();
                                }
                            });
                        } else {
                            Swal.fire({
                                position: "center-center",
                                icon: "error",
                                title: data.message,
                                showConfirmButton: true,
                                timer: 1500
                            }).then((result) => {
                                location.reload();
                            });
                        }
                    })
                    .catch(error => {
                        alert("Error")
                    });
            }
        });
    }
</script>



