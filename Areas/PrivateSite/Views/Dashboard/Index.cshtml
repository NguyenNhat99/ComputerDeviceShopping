@using ComputerDeviceShopping.Common
@using ComputerDeviceShopping.Models
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Areas/PrivateSite/Views/Shared/_Layout.cshtml";
    var orders = TempData["Orders"] as List<Order>;
    // ViewData["Orders"] = 

}
<style>
    .hover-card-dashboard:hover{
        color:red;
    }
</style>

<div class="container-fluid py-3">
    <h2 class="mb-3">Tổng quan</h2>

    <div class="row g-3">
        <div class="col-12 col-sm-6 col-lg-3">
            <a class="card bg-success text-white p-3" href="@Url.Action("Index","Revenue")">
                <div class="small">Doanh thu hôm nay</div>
                <div class="fs-4 fw-bold">@ConvertHelper.ConvertToVND(ViewBag.RevenueOfDay)</div>
                <div class="small text-white-50">Quản lý doanh thu</div>
            </a>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <a class="hover-card-dashboard card bg-warning text-dark p-3" href="@Url.Action("Index","Orders")">
                <div class="small">Đơn cần xác nhận</div>
                <div class="fs-4 fw-bold">@ViewBag.OrderConfirm</div>
                <div class="small text-dark-50">Danh sách đơn hàng</div>
            </a>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <a class="hover-card-dashboard card bg-primary text-white p-3" href="@Url.Action("Insert","Articles")">
                <div class="small">Thêm bài viết</div>
                <div class="fs-4 fw-bold">+ Mới</div>
                <div class="small text-white-50">Tạo bài viết mới</div>
            </a>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <a class="hover-card-dashboard card bg-info text-white p-3" href="@Url.Action("Insert","Products")">
                <div class="small">Thêm sản phẩm</div>
                <div class="fs-4 fw-bold">+ Mới</div>
                <div class="small text-white-50">Tạo sản phẩm mới</div>
            </a>
        </div>
    </div>
</div>
