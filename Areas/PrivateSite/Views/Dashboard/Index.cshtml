    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Dữ liệu ảo cho Line chart
        const revenueLabels = ["09/08", "10/08", "11/08", "12/08", "13/08", "14/08", "15/08"];
        const revenueData = [8250000, 9120000, 10340000, 11500000, 9900000, 12800000, 12450000];

        new Chart(document.getElementById('revenueLine'), {
            type: 'line',
            data: {
                labels: revenueLabels,
                datasets: [{
                    label: 'Doanh thu',
                    data: revenueData,
                    borderColor: 'rgba(75, 192, 192, 1)',
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    fill: true,
                    tension: 0.3
                }]
            },
            options: {
                responsive: true,
                plugins: { legend: { display: false } }
            }
        });

        // Dữ liệu ảo cho Doughnut chart
        const statusLabels = ["Pending", "Processing", "Shipped", "Cancelled"];
        const statusCounts = [5, 7, 12, 1];

        new Chart(document.getElementById('orderDonut'), {
            type: 'doughnut',
            data: {
                labels: statusLabels,
                datasets: [{
                    data: statusCounts,
                    backgroundColor: ['#6c757d', '#ffc107', '#198754', '#dc3545']
                }]
            },
            options: { responsive: true }
        });
    </script> *@
